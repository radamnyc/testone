<% team = @team || @team %>
<% context ||= team %>
<% collection ||= :cohorts %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: cohort do %>
  <tr data-id="<%= cohort.id %>">
    <%= render "shared/tables/checkbox", object: cohort %>
    <td><%= render 'shared/attributes/date', attribute: :closing_date, url: [:account, cohort] %></td>
    <td><%= render 'shared/attributes/option', attribute: :energy_type %></td>
    <td><%= render 'shared/attributes/number', attribute: :amount %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, cohort %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, cohort], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, cohort %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, cohort], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(cohort)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
